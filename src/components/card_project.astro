---
// Title
const { title } = Astro.props
// Description
const { description } = Astro.props
// Tags
const { tag1 } = Astro.props
const { tag2 } = Astro.props
const { tag3 } = Astro.props
const { tag4 } = Astro.props
// URLs
const { urlSite } = Astro.props
const { urlGit } = Astro.props
---

<section
  class="border-2 border-blue-400 w-96 lg:w-[600px] 2xl:w-[800px] h-52 mt-10 rounded-xl"
>
  <header class="mt-5">
    <p class="text-light text-center text-xl 2xl:text-2xl">{title}</p>
    <div class="float-right mr-10 -mt-8">
      <a
        class="fill-light hover:fill-blue-400 transition-all"
        href={urlSite}
        target="_blank"
      >
        <svg
          width="30"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 52.00 52.00"
          enable-background="new 0 0 52 52"
          xml:space="preserve"
          transform="rotate(0)matrix(1, 0, 0, 1, 0, 0)"
          ><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g
            id="SVGRepo_tracerCarrier"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke="#CCCCCC"
            stroke-width="0.10400000000000001"></g><g id="SVGRepo_iconCarrier">
            <g>
              <path
                d="M48.7,2H29.6C28.8,2,28,2.5,28,3.3v3C28,7.1,28.7,8,29.6,8h7.9c0.9,0,1.4,1,0.7,1.6l-17,17 c-0.6,0.6-0.6,1.5,0,2.1l2.1,2.1c0.6,0.6,1.5,0.6,2.1,0l17-17c0.6-0.6,1.6-0.2,1.6,0.7v7.9c0,0.8,0.8,1.7,1.6,1.7h2.9 c0.8,0,1.5-0.9,1.5-1.7v-19C50,2.5,49.5,2,48.7,2z"
              ></path>
              <path
                d="M36.3,25.5L32.9,29c-0.6,0.6-0.9,1.3-0.9,2.1v11.4c0,0.8-0.7,1.5-1.5,1.5h-21C8.7,44,8,43.3,8,42.5v-21 C8,20.7,8.7,20,9.5,20H21c0.8,0,1.6-0.3,2.1-0.9l3.4-3.4c0.6-0.6,0.2-1.7-0.7-1.7H6c-2.2,0-4,1.8-4,4v28c0,2.2,1.8,4,4,4h28 c2.2,0,4-1.8,4-4V26.2C38,25.3,36.9,24.9,36.3,25.5z"
              ></path>
            </g>
          </g>
        </svg>
      </a>
    </div>
    <div class="float-left ml-10 -mt-9">
      <a href={urlGit} target="_blank">
        <svg
          class="hover:text-blue-400 transition-all float-left mt-2"
          width="27"
          height="27"
          stroke-width="1.5"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          color="#E8E8E8"
          name="Github"
          class="text-gray-400 transition-all duration-150 hover:text-gray-200"
          ><path
            d="M16 22.027v-2.87a3.37 3.37 0 00-.94-2.61c3.14-.35 6.44-1.54 6.44-7a5.44 5.44 0 00-1.5-3.75 5.07 5.07 0 00-.09-3.77s-1.18-.35-3.91 1.48a13.38 13.38 0 00-7 0c-2.73-1.83-3.91-1.48-3.91-1.48A5.07 5.07 0 005 5.797a5.44 5.44 0 00-1.5 3.78c0 5.42 3.3 6.61 6.44 7a3.37 3.37 0 00-.94 2.58v2.87M9 20.027c-3 .973-5.5 0-7-3"
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </a>
    </div>
  </header>
  <footer class="mt-8">
    <p class="text-light text-center text-opacity-60 2xl:text-lg">
      {description}
    </p>
    <ul class="flex place-content-center mt-3">
      <li
        class="text-light border-2 border-light border-opacity-20 p-1 rounded-lg text-sm ml-2"
      >
        {tag1}
      </li>
      <li
        class="text-light border-2 border-light border-opacity-20 p-1 rounded-lg text-sm ml-2"
      >
        {tag2}
      </li>
      <li
        class="text-light border-2 border-light border-opacity-20 p-1 rounded-lg text-sm ml-2"
      >
        {tag3}
      </li>
      <li
        class="text-light border-2 border-light border-opacity-20 p-1 rounded-lg text-sm ml-2"
      >
        {tag4}
      </li>
    </ul>
  </footer>
</section>
